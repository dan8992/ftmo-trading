# FTMO Trading System Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=dax_trading
POSTGRES_USER=finrl_user
POSTGRES_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# API Keys (Get your own keys from respective providers)
NEWS_API_KEY=REPLACE_WITH_YOUR_NEWS_API_KEY
FINANCIAL_API_KEY=REPLACE_WITH_YOUR_FINANCIAL_API_KEY
ALPHA_VANTAGE_API_KEY=REPLACE_WITH_YOUR_ALPHA_VANTAGE_KEY

# AI/ML Configuration
MODEL_NAME=ProsusAI/finbert
TRANSFORMERS_CACHE=/tmp/transformers_cache
GPU_MEMORY_UTILIZATION=0.9
MAX_MODEL_LEN=4096

# FTMO Configuration
FTMO_DAILY_LOSS_LIMIT=0.05
FTMO_TOTAL_LOSS_LIMIT=0.10
FTMO_MAX_RISK_PER_TRADE=0.02
FTMO_ACCOUNT_BALANCE=100000

# Trading Configuration
ANALYSIS_INTERVAL=300
SIGNAL_CONFIDENCE_THRESHOLD=0.7
TRADING_ENABLED=true
PAPER_TRADING_MODE=true

# Monitoring Configuration
PROMETHEUS_RETENTION=200h
GRAFANA_ADMIN_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# External Services
SLACK_WEBHOOK_URL=REPLACE_WITH_YOUR_SLACK_WEBHOOK
EMAIL_NOTIFICATIONS=false

# Security
JWT_SECRET_KEY=REPLACE_WITH_32_CHAR_RANDOM_KEY
ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_RANDOM_KEY
